<Window x:Class="zadanie5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie5"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Lista uzytkownikow" Grid.Row="0" Grid.Column="0"/>
        <ListBox SelectionMode="Single" Grid.Row="1" Grid.Column="0" Name="lista" SelectionChanged="select_user"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Content="Dodaj..." Click="AddUser"></Button>
            <Button Content="Usuń" Click="DeleteUser"></Button>
            <Button Content="Edytuj..." Click="EditUser"></Button>
            <Button Content="Podgląd..." Click="PreviewUser"></Button>
        </StackPanel>
        <Button Content="Zamknij" Name="Zamknij" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Click="zamknijOkno"/>
    </Grid>
</Window>
